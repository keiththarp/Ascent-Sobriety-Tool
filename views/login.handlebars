<div class="main-content">
    <div class="box login-container animate__animated animate__fadeIn animate__delay-0.5s">
        <button class="back fas fa-arrow-circle-left" value="Go back!" onclick="history.back()">
        </button>
        <div class="container">
            <img SRC="img/logo.png" alt="mountain logo"
                class="signin-logo animate__animated animate__fadeIn animate__delay-0.5s">
            <h2 class="login-title animate__animated animate__fadeIn animate__delay-0.5s">ASCENT</h2>
            <form class="animate__animated animate__fadeIn animate__delay-2s">
                <input type="text" placeholder="email" id="email">
                <input type="password" placeholder="password" id="password">
                <div class="remember">
                    <input type="checkbox" value="lsRemember"> <label for="remember">Remember me</label>
                </div>
                <button class="btn btn-default login-btn" type="button" id="signInBtn">Sign in</button>
            </form>
        </div>
    </div>
</div>

