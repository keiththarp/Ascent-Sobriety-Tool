{{!-- Check In Main Content --}}
<div class="main-content login-container">
    
    {{!-- Card holding form --}}
    <div class="box main-content animate__animated animate__fadeIn animate__delay-1s">

        {{!-- Logo --}}
        <img SRC="img/logo.png" alt="mountain logo"
            class="login-logo animate__animated animate__fadeIn animate__delay-1s">

        {{!-- Title --}}
        <h2 class="login-title animate__animated animate__fadeIn animate__delay-1s">ASCENT</h2>

        {{!-- form w/ username, password & remember-me checkbox --}}
        <form class="login animate__animated animate__fadeIn animate__delay-2s">
            <input type="text" placeholder="username">
            <input type="password" placeholder="password">
            <div class="checkbox">
                <input type="checkbox" value="lsRememberMe"> <label for="rememberMe">Remember me</label>
            </div>
            <button class="btn login-btn">Sign in</button>
        </form>
    </div>
</div>