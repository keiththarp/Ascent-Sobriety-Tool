<main role="main" class="flex-shrink-0 main-content">
  <!-- container for the counter -->
  <div class="container">
    <div class="row" id="counter">
      <!-- Pie chart will be inserted into this div -->
      <div id="responsive-chart"></div>
      {{!-- trasparent overlay and logo --}}
      <div class="rounded-circle chart-inner"></div>
      <img id="mtn-img" class="mx-auto" src="./img/logos/sober-icon.png" alt="mountain-logo">
      <!-- how many days sober -->
      <p class="days-sober mx-auto">{{user.consDays}}</p>
    </div>
  </div>

  {{!-- Container for badges --}}
  <div class="container badges">
    {{!-- <div class="row badges-row"> --}}
    {{!-- one day badge --}}
    {{#if user.badgeOne}}
    {{!-- <div class="badges-col"> --}}
    <img class="earned-badge" src="./img/badges/oneDay.png" alt="One Day Badge">
    {{!-- </div> --}}
    {{/if}}
    {{!-- 5 days badge --}}
    {{#if user.badgeTwo}}
    {{!-- <div class="badges-col"> --}}
    <img class="earned-badge" src="./img/badges/fiveDay.png" alt="5 Day Badge">
    {{!-- </div> --}}
    {{/if}}
    {{!-- 10 days badge --}}
    {{#if user.badgeThree}}
    {{!-- <div class="badges-col"> --}}
    <img class="earned-badge" src="./img/badges/tenDay.png" alt="10 Day Badge">
    {{!-- </div> --}}
    {{/if}}
    {{!-- 1 month badge --}}
    {{#if user.badgeFour}}
    {{!-- <div class="badges-col"> --}}
    <img class="earned-badge" src="./img/badges/oneMonth.png" alt="One Month Badge">
    {{!-- </div> --}}
    {{/if}}
    {{!-- 1 year badge --}}
    {{#if user.badgeFive}}
    {{!-- <div class="badges-col"> --}}
    <img class="earned-badge" src="./img/badges/oneYear.png" alt="One Year Badge">
    {{!-- </div> --}}
    {{/if}}
    {{!-- </div> --}}
  </div>

  <!-- Container total sober days -->
  <div class="container days-until text-center">
    <div class="row text-center outer-stars">
      <div class="stars-container">
      </div>
    </div>
  </div>

  <!-- Inspirational quote -->
  <div class="quote-container container">
    <p class="quote">{{quote}}</p>
    <p class="quote-author">- {{author}}</p>
    <div class="text-center">
      <a class="submit-link" href="/submit">Submit A New Quote</a>
    </div>
  </div>
</main>

